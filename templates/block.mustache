{{!
    @template block_zegnaranking/groupranking_page

    Print the module ranking.

    Example context (json):
    {
        "regions": [{
            "groupname": "North America",
            "points": "123"
        }]
    }
}}

<div id="ranking-tabs">
    <ul>
        <li><a href="#semanal">{{#str}}weekly, block_ranking{{/str}}</a></li>
        <li><a href="#mensal">{{#str}}monthly, block_ranking{{/str}}</a></li>
        <li><a href="#geral">{{#str}}general, block_ranking{{/str}}</a></li>
    </ul>
    <div>
        <div id="semanal">
            <table class="rankingTable table table-striped generaltable">
                <thead>
                    <tr>
                        <th class="header">{{#str}}table_position, block_ranking{{/str}}</th>
                        <th class="header">{{#str}}table_name, block_ranking{{/str}}</th>
                        <th class="header lastcol">{{#str}}table_points, block_ranking{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#rankinglastweek}}
                        <tr class="{{{class}}}">
                            <td>{{{pos}}}</td>
                            <td>{{{user}}}</td>
                            <td class="lastcol">{{{points}}}</td>
                        </tr>
                    {{/rankinglastweek}}
                </tbody>
            </table>
        </div>
        <div id="mensal">
            <table class="rankingTable table table-striped generaltable">
                <thead>
                <tr>
                    <th class="header">{{#str}}table_position, block_ranking{{/str}}</th>
                    <th class="header">{{#str}}table_name, block_ranking{{/str}}</th>
                    <th class="header lastcol">{{#str}}table_points, block_ranking{{/str}}</th>
                </tr>
                </thead>
                <tbody>
                {{#rankinglastmonth}}
                    <tr class="{{{class}}}">
                        <td>{{{pos}}}</td>
                        <td>{{{user}}}</td>
                        <td class="lastcol">{{{points}}}</td>
                    </tr>
                {{/rankinglastmonth}}
                </tbody>
            </table>
        </div>
        <div id="geral">
            <table class="rankingTable table table-striped generaltable">
                <thead>
                <tr>
                    <th class="header">{{#str}}table_position, block_ranking{{/str}}</th>
                    <th class="header">{{#str}}table_name, block_ranking{{/str}}</th>
                    <th class="header lastcol">{{#str}}table_points, block_ranking{{/str}}</th>
                </tr>
                </thead>
                <tbody>
                {{#rankinggeral}}
                    <tr class="{{{class}}}">
                        <td>{{{pos}}}</td>
                        <td>{{{user}}}</td>
                        <td class="lastcol">{{{points}}}</td>
                    </tr>
                {{/rankinggeral}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{#rankingindividual}}
    <h4>{{#str}}your_score, block_ranking{{/str}}</h4>
<table class="individualTable table table-striped individualtable">
    <thead>
    <tr>
        <th class="header">{{#str}}weekly, block_ranking{{/str}}</th>
        <th class="header">{{#str}}monthly, block_ranking{{/str}}</th>
        <th class="header lastcol">{{#str}}general, block_ranking{{/str}}</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{{lastweek}}}</td>
            <td>{{{lastmonth}}}</td>
            <td class="lastcol">{{{totalpoints}}}</td>
        </tr>
    </tbody>
</table>
{{/rankingindividual}}